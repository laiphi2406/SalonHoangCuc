@model CongViecGiaDinh.Models.ChiTietHoGiaDinh
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .ul.pagination {
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>

<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords"
          content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Nice lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Nice admin lite design, Nice admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description"
          content="Nice Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">
    <link rel="canonical" href="https://www.wrappixel.com/templates/niceadmin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/Content/libs/chartist/dist/chartist.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/css/style.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="card">
                    <div class="card-body row">
                        <div class="row col-lg-12">
                            <div class="col-lg-12"><h2 style="text-align:center ; color:red">Chi tiết gia đình bạn</h2></div>
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenGiaDinh, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.TenGiaDinh, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.TenGiaDinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaHoGiaDinh, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.MaHoGiaDinh, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.MaHoGiaDinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoThanhVien, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.SoThanhVien, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.SoThanhVien, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="row">
                                    @* From select tinh *@
                                    <div class="col">
                                        @Html.LabelFor(model => model.Tinh, htmlAttributes: new { @class = "control-label" })
                                        <br />
                                        <select disabled="disabled" class="form-control" id="Tinhtp" name="ThanhPho" onchange="GetQuanHuyen(this)">
                                            <option value="" selected>@Html.DisplayFor(model => model.Tinh) </option>

                                        </select>
                                    </div>

                                    @* From select quan huyen *@
                                    <div class="col">
                                        @Html.LabelFor(model => model.Huyen, htmlAttributes: new { @class = "control-label" })
                                        <select disabled="disabled" class="form-control" id="quanhuyen" name="QuanHuyen" onchange="GetXaPhuong(this)">
                                            <option value="" selected> @Html.DisplayFor(model => model.Huyen)</option>
                                        </select>
                                    </div>

                                    @* From select xa phuong *@
                                    <div class="col">
                                        @Html.LabelFor(model => model.Xa, htmlAttributes: new { @class = "control-label" })
                                        <select disabled="disabled" class="form-control" id="xaphuong" name="XaPhuong">
                                            <option selected>@Html.DisplayFor(model => model.Xa)</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <table class="table" style="margin-top:30px">
                                <tr>
                                    <th style="text-align:center" class="col-md-4">
                                        Tên Thành Viên
                                    </th>
                                    <th style="text-align:center" class="col-md-4" >
                                        Chức Danh
                                    </th>
                                    <th style="text-align:center" class="col-md-4">
                                        Quyền Hệ Thống
                                    </th>
                                </tr>
                                @foreach (var item in Model.TenThanhViens)
                                {
                                    <tr>
                                        <td>
                                            @item.Name

                                        </td>
                                        <td>
                                            @item.TenChucDanh
                                        </td>

                                        <td>
                                            @item.TenChucDanhHeThong
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Content/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Content/extra-libs/sparkline/sparkline.js"></script>
    <!--Wave Effects -->
    <script src="~/Content/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Content/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Content/js/custom.min.js"></script>
    <script src="~/Scripts/BangTin.js"></script>
</body>
</html>
