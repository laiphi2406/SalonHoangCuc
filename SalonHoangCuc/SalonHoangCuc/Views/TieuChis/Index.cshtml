@model PagedList.IPagedList<CongViecGiaDinh.Models.TieuChi>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ul.pagination {
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>

<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords"
          content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Nice lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Nice admin lite design, Nice admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description"
          content="Nice Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">
    <link rel="canonical" href="https://www.wrappixel.com/templates/niceadmin-lite/" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/images/favicon.png">
    <!-- Custom CSS -->
    <link href="~/Content/libs/chartist/dist/chartist.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/css/style.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="card">
                    <div class="card-body row">

                        <div class="row col-lg-12">
                            <div class="col-lg-6"><h2>Danh sách tiêu chí</h2></div>
                            <div class="col-lg-6 d-flex justify-content-end">
                                <button class="btn  btn-outline-primary mb-2" onclick="location.href='@Url.Action("Create", "TieuChis")';return false;"> <i class="me-2 mdi mdi-plus"></i>Tạo mới</button>
                            </div>
                        </div>


                        <div class="table-responsive">
                            <table class="table table-striped">
                                <tr>
                                    <th class="text-center">
                                        Tên tiêu chí
                                    </th>
                                    <th class="text-center">
                                        Điểm
                                    </th>
                                    <th class="text-center">
                                        Thời gian tạo
                                    </th>
                                    <th class="text-center">Hành động</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="max-width:300px">
                                            @Html.DisplayFor(modelItem => item.TenTieuChi)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Diem)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.ThoiGianTao)
                                        </td>
                                        <td class="text-center">
                                            <div class="row">
                                                <div class="col-lg-3"></div>
                                                <div class="col-lg-3">
                                                    @using (Html.BeginForm("EditTable", "TieuChis", new { id = item.ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                    {
                                                        <button type="submit" class="btn btn-link"><i class="mdi mdi-pencil" style="color: #498FCD"></i></button>
                                                    }
                                                </div>
                                                <div class="col-lg-3">
                                                    @using (Html.BeginForm("DeleteConfirmedTable", "TieuChis", new { id = item.ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                    {
                                                        <button type="submit" class="btn btn-link"><i class="mdi mdi-delete" style="color:orangered"></i></button>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </table>

                            <br />
                            <div class="pagination">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Content/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Content/extra-libs/sparkline/sparkline.js"></script>
    <!--Wave Effects -->
    <script src="~/Content/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Content/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Content/js/custom.min.js"></script>
    <script src="~/Scripts/BangTin.js"></script>
</body>
</html>
